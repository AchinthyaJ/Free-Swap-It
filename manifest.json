{
  "manifest_version": 3,
  "name": "The Free Swap-It",
  "version": "1.0",
  "description": "Click text to replace it everywhere.",
  "permissions": ["storage","activeTab","scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {"default_popup": "popup.html"},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
